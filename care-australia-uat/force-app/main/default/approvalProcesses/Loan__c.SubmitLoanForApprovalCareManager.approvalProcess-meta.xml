<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>FSP_Users</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Loan_Title__c</field>
        <field>Loan_Type__c</field>
        <field>FSP_Name__c</field>
        <field>FSP_Loan_ID__c</field>
        <field>Borrower__c</field>
        <field>First_Time_Loan__c</field>
        <field>Amount_Funded__c</field>
        <field>Loan_Term_Months__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Loan_Stage_Schedule</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>LoanProposalStatusUpdate_ReadyToPublish</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>PublishedDateUpdate</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Care_Loan_Managers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>GetApprovedByCareManagers</label>
        <name>GetApprovedByCareManagers</name>
        <rejectionActions>
            <action>
                <name>LoanProposalStatusUpdate_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>LoanRejectionAlert_FSP</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Stage_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Submit the loan for Approval from Care Manager</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Loan__c.Loan_Proposal_Status__c</field>
            <operation>equals</operation>
            <value>Content Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>SubmitLoanForApprovalCareManager</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
