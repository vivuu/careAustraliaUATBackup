<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>FSP_Users</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Loan_Title__c</field>
        <field>FSP__c</field>
        <field>Name</field>
        <field>Borrower__c</field>
        <field>Loan_Principal_Disbursed_USD__c</field>
        <field>Loan_Principal_Disbursed__c</field>
        <field>Published_Amount_AUD__c</field>
        <field>Buffer_AUD__c</field>
        <field>CurrencyIsoCode</field>
        <field>Loan_Schedule__c</field>
        <field>Loan_Term_Months__c</field>
        <field>Number_of_Repayments__c</field>
        <field>Months_Count_Repayments__c</field>
        <field>Loan_Term_Months_Intended__c</field>
        <field>Loan_Disbursement_Date__c</field>
        <field>Loan_Maturity_Date__c</field>
        <field>First_Repayment_Due_Date__c</field>
        <field>Loan_Type__c</field>
        <field>Loan_Purpose__c</field>
        <field>Loan_Description__c</field>
        <field>Location_of_Business__c</field>
        <field>Number_of_Employees__c</field>
        <field>Female_Employees_Count__c</field>
        <field>Jobs_Created__c</field>
        <field>No_of_Female_Employees_With_Disability__c</field>
        <field>Number_of_Male_Employees_With_Disability__c</field>
        <field>GBV_Information_Provided__c</field>
        <field>Consent_Provided__c</field>
        <field>Collateral__c</field>
        <field>Collateral_Detail__c</field>
        <field>CA_Themes__c</field>
        <field>Published_Date__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>LoanProposalStatusUpdate_ContentApproved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Care_Loan_Reviewer</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>GetApprovedByCareReviewers</label>
        <name>GetApprovedByCareReviewers</name>
        <rejectionActions>
            <action>
                <name>LoanProposalStatusUpdate_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>LoanRejectionAlert_FSP</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Stage_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Submit the loan for Approval from Care Reviewer</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Loan__c.Loan_Proposal_Status__c</field>
            <operation>equals</operation>
            <value>Draft,Rejected,System Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>LoanProposalStatusUpdate_UnderReview</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_New</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>SubmitLoanForApprovalCareReviewer</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
