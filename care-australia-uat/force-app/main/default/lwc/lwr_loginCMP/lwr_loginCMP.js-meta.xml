    <isExposed>true</isExposed>
	<targets>
		<target>lightningCommunity__Page</target>
		<target>lightningCommunity__Default</target>
		<target>lightningCommunity__Page_Layout</target>
		<target>lightningCommunity__Theme_Layout</target>
	</targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="forgotPasswordLabel" label="Forgot Password Label" type="String" required="true"/>
            <property name="forgotPasswordPageURL" label="Forgot Password Page URL" type="String" required="true"/>
            <property name="createAccountLabel" label="Create Account Button Label" type="String" required="true"/>
            <property name="createAccountPageURL" label="Create Account Page URL" type="String" required="true"/>
            <property name="resendOTPLabel" label="Resend OTP Label" type="String" required="true"/>   
            <property name="otpLength" label="Length Of OTP" type="Integer" default="6" required="true"/>
