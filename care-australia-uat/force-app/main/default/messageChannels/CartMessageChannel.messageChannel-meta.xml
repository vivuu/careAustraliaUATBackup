<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>This Lightning Message Channel sends information from Nav Bar to Add to cart and vice versa</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>message To Send</description>
        <fieldName>messageToSend</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Loans Array</description>
        <fieldName>currentRecordId</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Amount to be added</description>
        <fieldName>amountAddedToCart</fieldName>
    </lightningMessageFields>
    <masterLabel>CartMessageChannel</masterLabel>
</LightningMessageChannel>
